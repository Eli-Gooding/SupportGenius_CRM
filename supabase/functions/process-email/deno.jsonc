{
  "compilerOptions": {
    "allowJs": true,
    "lib": ["deno.window", "deno.ns", "esnext"],
    "strict": true,
    "target": "esnext",
    "module": "esnext"
  },
  "lint": {
    "files": {
      "include": ["**/*.ts"]
    },
    "rules": {
      "tags": ["recommended"]
    }
  },
  "fmt": {
    "files": {
      "include": ["**/*.ts"]
    },
    "options": {
      "useTabs": false,
      "lineWidth": 100,
      "indentWidth": 2,
      "singleQuote": true
    }
  }
} 